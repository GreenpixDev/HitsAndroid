<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.LinearLayout">

    <ImageView
        android:id="@+id/contact"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/button_shape_circle_stroke"
        android:buttonTint="@color/toolBar_color" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="5dp"
        android:text="description"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/inputFieldFloat"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:visibility="gone" />

    <EditText
        android:id="@+id/inputFieldInt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:visibility="gone" />

    <EditText
        android:id="@+id/inputFieldString"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/tickIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_tick"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/crossIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_cross"
        android:visibility="gone" />


</merge>