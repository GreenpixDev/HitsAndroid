<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:id="@+id/blueprintLayout"
    android:visibility="visible"
    tools:openDrawer="start"
    tools:context=".BlueprintActivity">

    <com.otaliastudios.zoom.ZoomLayout
        android:id="@+id/zoomLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:transformation="centerInside"
        app:transformationGravity="auto"
        app:alignment="center"
        app:overScrollHorizontal="true"
        app:overScrollVertical="true"
        app:overPinchable="true"
        app:horizontalPanEnabled="true"
        app:verticalPanEnabled="true"
        app:zoomEnabled="true"
        app:flingEnabled="true"
        app:scrollEnabled="true"
        app:oneFingerScrollEnabled="true"
        app:twoFingersScrollEnabled="true"
        app:threeFingersScrollEnabled="true"
        app:minZoom="10"
        app:minZoomType="zoom"
        app:maxZoom="750"
        app:maxZoomType="zoom"
        app:animationDuration="280"
        app:hasClickableChildren="true"
        tools:ignore="MissingClass,MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/codeField"
            android:background="@color/bg_main"
            android:clipChildren="false"
            android:layout_width="100000dp"
            android:layout_height="100000dp">

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.otaliastudios.zoom.ZoomLayout>

    <ImageView
        android:id="@+id/ToPageSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="536dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/settings_icon_description"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_settings_icon" />

    <ImageView
        android:id="@+id/ToStartCode"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/play_icon_description"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043"
        app:srcCompat="@drawable/ic_play_icon" />

    <ImageView
        android:id="@+id/toShowConsole"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="536dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/console_icon_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toSave"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_console_icon"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/toSave"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="536dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ToPageSettings"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_save_icon"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/menu"
        android:layout_width="255dp"
        android:layout_height="0dp"
        android:background="@color/buttons"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >
    </View>

    <ScrollView
        android:id="@+id/scrollViewMenu"
        android:layout_width="230dp"
        android:layout_height="300dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/menu_description"
        app:layout_constraintBottom_toBottomOf="@+id/menu"
        app:layout_constraintEnd_toEndOf="@+id/menu"
        app:layout_constraintStart_toStartOf="@+id/menu"
        app:layout_constraintTop_toBottomOf="@+id/showMenu">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/listBlocks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleBlocks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Blocks"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/listFunction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableRow
                    tools:ignore="ExtraText"
                    android:id="@+id/tableRowFunction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleFunction"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/titleFunctions"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/plusFunction"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:background="@drawable/ic_plus" />
                </TableRow>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/listMacros"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableRow
                    android:id="@+id/tableRowMacros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleMacros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Макросы"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/plusMacros"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:background="@drawable/ic_plus" />
                </TableRow>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/listVariables"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableRow
                    android:id="@+id/tableRowVariables"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleVariables"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/titleVariable"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageButton
                        android:id="@+id/plusVariable"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:background="@drawable/ic_plus" />

                </TableRow>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

    <ImageButton
        android:id="@+id/showMenu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle_fill"
        android:contentDescription="@string/show_and_not_show_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,ImageContrastCheck" />

    <View
        android:id="@+id/consoleView"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:background="@drawable/round_rectangle"
        app:layout_constraintBottom_toBottomOf="@+id/toShowConsole"
        app:layout_constraintEnd_toStartOf="@+id/toShowConsole"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ScrollView
        android:id="@+id/consoleScrollView"
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:contentDescription="@string/console"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/consoleView"
        app:layout_constraintBottom_toTopOf="@+id/consoleInput"
        app:layout_constraintTop_toTopOf="@+id/consoleView"
        app:layout_constraintEnd_toEndOf="@+id/consoleView"
        app:layout_constraintVertical_bias="0">

        <LinearLayout
            android:id="@+id/linearLayoutConsole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <EditText
        android:id="@+id/consoleInput"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:inputType="textMultiLine"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/consoleView"
        app:layout_constraintEnd_toEndOf="@id/consoleScrollView"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/consoleScrollView"
        app:layout_constraintTop_toBottomOf="@id/consoleScrollView" />

    <ImageView
        android:id="@+id/toSend"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/consoleView"
        app:layout_constraintEnd_toEndOf="@id/consoleScrollView"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/consoleInput"
        app:layout_constraintTop_toBottomOf="@id/consoleScrollView"
        app:layout_constraintVertical_bias="0"
        app:srcCompat="@drawable/ic_send_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>