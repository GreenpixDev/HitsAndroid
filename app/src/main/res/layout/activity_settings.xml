<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/title_information_activity"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/backToMain"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:onClick="goMainActivity"
        android:text="@string/back_to_main"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/start"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:onClick="goBluePrintActivity"
        android:text="@string/go_to_the_game"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/left_arrow"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:contentDescription="@string/left_arrow_description"
        android:onClick="goMainActivity"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/backToMain"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/backToMain"
        app:layout_constraintTop_toBottomOf="@+id/backToMain"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_left_arrow"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="150dp"
        android:layout_height="28dp"
        android:contentDescription="@string/right_arrow_description"
        android:onClick="goBluePrintActivity"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/start"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/start"
        app:layout_constraintTop_toBottomOf="@+id/start"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_right_arrow"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="25dp"
        app:cardBackgroundColor="@color/background_header"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/backToGame"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttons"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/back_to_game"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:cornerRadius="20dp"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/saveCode"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttons"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/save_code"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:cornerRadius="20dp"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/openCode"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttons"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/open_code"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:cornerRadius="20dp"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/goToMain"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttons"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/back_to_main"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:cornerRadius="20dp"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/exit"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttons"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/exit"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:cornerRadius="20dp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>