<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.TableLayout">

    <LinearLayout
        android:id="@+id/creator"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_style">

        <LinearLayout
            android:id="@+id/rowForMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/typeVariable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="3dp"
                tools:ignore="TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:minWidth="50dp"
                android:maxWidth="63dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/black"
                android:hint=" Enter name"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:paddingTop="2dp"
                android:textSize="8sp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="53dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_horizontal|center_vertical"
                android:stateListAnimator="@null"
                android:text="@string/blockAdd"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="54dp"
                android:layout_height="35dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_horizontal|center_vertical"
                android:stateListAnimator="@null"
                android:text="EDIT"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="2dp" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_cross"
                android:elevation="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:gravity="center_horizontal|center_vertical"
                android:stateListAnimator="@null"
                android:text="DELETE"
                android:textColor="@color/black"
                android:textSize="8sp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="2dp" />

        </LinearLayout>

        <TableRow
            android:id="@+id/inputRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="left">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:paddingStart="1dp"
                android:paddingEnd="1dp"
                android:text="Input"
                android:textSize="15dp"
                style="@style/textViewStyle" />

            <ImageButton
                android:id="@+id/plusInputParam"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/ic_plus"
                android:layout_gravity="center_vertical" />

        </TableRow>

        <!--        тут входящие параметры-->
        <LinearLayout
            android:id="@+id/listParameters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:orientation="vertical" />

        <TableRow
            android:id="@+id/outputRow"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:layout_gravity="left">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:text="Output"
                android:textAlignment="center"
                android:paddingStart="1dp"
                android:paddingEnd="1dp"
                style="@style/textViewStyle" />

            <ImageButton
                android:id="@+id/plusOutputVar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/ic_plus"
                android:layout_gravity="center_vertical" />
        </TableRow>

        <LinearLayout
            android:id="@+id/listOutputVar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:orientation="vertical" />
    </LinearLayout>
</merge>