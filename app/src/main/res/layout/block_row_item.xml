<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.TableLayout">

    <TableRow
        android:id="@+id/rowBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="@color/bg_header"        >

        <ImageButton
            android:id="@+id/inputRadioButton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="7dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_shape_circle_stroke"
            android:buttonTint="@color/toolBar_color" />

        <Spinner
            android:id="@+id/typeSpinner"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@color/buttons"
            android:entries="@array/TypeBlock"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="description"
            android:gravity="center"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/expressionTextView"
            android:layout_width="wrap_content"
            android:minWidth="50dp"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:text=""
            android:layout_marginStart="3dp"/>

        <ImageButton
            android:id="@+id/outputRadioButton"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_shape_circle_stroke"
            android:buttonTint="@color/toolBar_color"
            android:layout_weight="1"
            android:layout_marginEnd="7dp"
            android:layout_marginStart="7dp"
            tools:ignore="TouchTargetSizeCheck" />
    </TableRow>

</merge>