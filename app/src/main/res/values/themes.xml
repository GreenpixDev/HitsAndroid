<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HitsAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="colorBlockHeaderDefault">@color/colorBlockHeaderDefault</item>
        <item name="colorBlockHeaderMain">@color/colorBlockHeaderMain</item>
        <item name="colorBlockHeaderFunction">@color/colorBlockHeaderFunction</item>
        <item name="colorBlockHeaderMacros">@color/colorBlockHeaderMacros</item>
        <item name="colorBlockHeaderVariable">@color/colorBlockHeaderVariable</item>

        <item name="colorFlowControl">@color/white</item>
        <item name="colorVariableBoolean">@color/colorVariableBoolean</item>
        <item name="colorVariableInt">@color/colorVariableInt</item>
        <item name="colorVariableFloat">@color/colorVariableFloat</item>
        <item name="colorVariableString">@color/colorVariableString</item>
    </style>
</resources>