<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textViewStyleForMenu">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="blocksVariablesStyle">
        <item name="bgBlock">@color/bgBlock</item>
    </style>

    <style name="btnAboutUsStyle">
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="backgroundTint">@color/bg_btn_for_fragments</item>
        <item name="textOutlineColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/montserrat_alternates_semibold</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="btnForFragmentSave">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">100dp</item>
        <item name="layout_gravity">center</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="backgroundTint">@color/bg_btn_for_fragments</item>
    </style>

    <style name="textViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="btnPlusForMenu">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">3dp</item>
    </style>

    <style name="btnCreatorViewStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">6sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="textFillColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">8sp</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:cursorVisible">false</item>
    </style>

</resources>